{
    "name": "Circlemarkr",
    "version": "5.0.0",
    "description": "G+のユーザーにマークを付けます",
    "homepage_url": "https://plus.google.com/b/112102646198561777507/",
    "options_page": "options.html",
    "background": {
        "scripts": [
            "gaq.js",
            "jquery-1.8.3.min.js",
            "config.js",
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png"
    },
    "content_scripts": [
        {
            "js": [
                "jquery-1.8.3.min.js",
                "config.js",
                "Circlemarkr.js"
            ],
            "matches": [
                "https://plus.google.com/*"
            ],
            "all_frames": true
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "storage",
        "https://plus.google.com/*",
        "tabs",
        "alarms",
        "webNavigation"
    ],
    "manifest_version": 2
}
